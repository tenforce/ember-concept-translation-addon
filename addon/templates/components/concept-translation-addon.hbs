{{#if loading}}
  <div class="loading">
    <i class="fa fa-spinner fa-pulse"></i>
  </div>
{{else}}

  <div class="{{if defaultClasses 'translation-form'}}">
    <div class="{{if defaultClasses 'header'}}">
      {{#if toggleButton}}
        {{#if defaultClasses}}
          <button class="" {{action 'showTerms'}}>Terms</button>
        {{else}}
          <div class="section__title">
            <h2 {{action 'showTerms'}}><span>Terms</span></h2>
          </div>
        {{/if}}
      {{/if}}
      {{#if showLanguageSelector}}
        <h3>Translation to<div class="language-selector">{{language-selector setLanguage="setLanguage" defaultLang=user.language languages=languages}}
            </div>
          </h3>
      {{/if}}
      {{#if showStatusSelector}}
        <div class="translation-status" title= {{statusSelectorTitle}}>
          {{#power-select tabindex=-1 disabled=(not allowStatusChange) options=statusOptions selected=status onchange=(action "setStatus") as |state|}}
            <span class="status-{{state}}">{{state}}</span>
          {{/power-select}}
        </div>
      {{/if}}
    </div>

    {{#if showElements}}
      {{translate-prefterm concept=concept term=prefTerm prefTerm=prefTerm altTerms=altTerms roles=roles language=language sourceLanguage=sourceLanguage targetLanguage=targetLanguage translationDisabled=translationDisabled displaySuggestions=showSuggestions
      showQuest=showQuest showSource=showSource showPlus=showPlus}} {{translate-altterms concept=concept prefTerm=prefTerm altTerms=altTerms roles=roles language=language sourceLanguage=sourceLanguage targetLanguage=targetLanguage translationDisabled=translationDisabled
      displaySuggestions=showSuggestions showQuest=showQuest showSource=showSource showPlus=showPlus}} {{translate-hiddenterms concept=concept hiddenTerms=hiddenTerms roles=roles language=language sourceLanguage=sourceLanguage targetLanguage=targetLanguage
      translationDisabled=translationDisabled displaySuggestions=showSuggestions showQuest=showQuest showSource=showSource showPlus=showPlus}}
      {{#if showGendersBox}}
        {{#unless emptyGenderBox}}
          <div class="block">
            {{visual-gender-box altTerms=altTerms prefTerm=prefTerm}}
          </div>
        {{/unless}}
      {{/if}}
    {{/if}}
  </div>
{{/if}}
