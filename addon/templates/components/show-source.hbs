<div class="source {{if source 'active' 'inactive'}}"  {{action 'toggleSource'}} title="specify source for term">
    <i class="fa fa-link" id={{buttonId}}></i>
  {{#if loaded}}
    {{#if displaySource}}
      {{#tether-dialog close='closeSource' hasOverlay=false clickOutsideToClose=true  target=sButtonId
      targetAttachment='bottom left' attachment='top left' container-class='term-source'}}
          {{translation-source source=source closeSource="closeSource" disabled=disabled disableShortcuts=disableShortcuts}}
      {{/tether-dialog}}
    {{/if}}
  {{/if}}
</div>
